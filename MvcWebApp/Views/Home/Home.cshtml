
@{
    ViewBag.Title = "Home";
}
<h2>Home</h2>
<form name="NewMatchForm" role="form" class="form-horizontal" ng-controller="MatchSaveCtrl" novalidate>
    <div class="form-group">
        <label class="col-sm-2">First Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control col-sm-10" ng-model="user.firstname" name="firstname" placeholder="First Name" required/>
            <span class="text-danger" ng-show="NewMatchForm.$dirty && NewMatchForm.firstname.$error.required"> First Name Required</span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Last Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control col-sm-10" ng-model="user.lastname" name="lastname" placeholder="Last Name" required/>
            <span class="text-danger" ng-show="NewMatchForm.$dirty && NewMatchForm.lastname.$error.required"> Last Name Required</span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control col-sm-10" ng-model="user.email" name="emailid" placeholder="Email" required/>
            <span class="text-danger" ng-show="NewMatchForm.$dirty && NewMatchForm.emailid.$error.required"> Email Required</span>
            <span class="text-danger" ng-show="NewMatchForm.$dirty && NewMatchForm.emailid.$error.email"> Email Not Valid</span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control col-sm-10" ng-model="user.pwd" name="pwd" placeholder="Password" required/>
            <span class="text-danger" ng-show="NewMatchForm.$dirty && NewMatchForm.pwd.$error.required"> Password Required</span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Confirm Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control col-sm-10" ng-model="user.confirmpwd" name="confirmpwd" placeholder="confirm Password" data-password-verify="user.pwd" required />
            <span class="text-danger" ng-show="NewMatchForm.$dirty && NewMatchForm.confirmpwd.$error.required"> Confirm Password Required</span>
            <span class="text-danger" ng-show="NewMatchForm.confirmpwd.$error.passwordVerify"> Passwords Not Match</span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">Country</label>
        <div class="col-sm-10">
            <input type="text" class="form-control col-sm-10" ng-model="user.country" name="country" placeholder="Country" required/>
            <span class="text-danger" ng-show="NewMatchForm.$dirty && NewMatchForm.country.$error.required"> Country Required</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" ng-click="save(user)" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>

