<!DOCTYPE html>
<html ng-app="appdash">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title ng-bind="title"></title>    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site_Style.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>    
</head>
<body>
    <div class="header_top"></div>

    
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 col-md-2 sidebar">
                    <ul>
                        <li ui-route="/"><a ui-sref="home">Dashboard</a></li>
                        <li ui-route="/new_match"><a ui-sref="new_match">Add Match</a></li>
                        <li ui-route="/list_match"><a ui-sref="list_match">Match List</a></li>
                        <li ui-route="/new_player"><a ui-sref="new_player">Add Player</a></li>
                    </ul>
                </div>
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
                    <ol class="breadcrumb">
                        <li><a ui-sref="home"><i class="fa fa-home"></i> Home</a></li>
                        <li><a href="#">Library</a></li>
                        <li class="active">Data</li>
                    </ol>
                    <div class="main_container">
                        <h3 ng-bind="title"></h3>
                        <div class="app_content">
                            @RenderBody()
                        </div>
                    </div>

                </div>
            </div>
        </div>  
    
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular.min.js"></script>    
    <script type="text/javascript" src="~/Scripts/angular-ui-router.min.js"></script>    
    <script type="text/javascript" src="~/Scripts/ui-bootstrap-tpls-0.13.2.min.js"></script>    
    <script type="text/javascript" src="~/Scripts/App/app.js"></script>    

    <script type="text/javascript" src="~/Scripts/App/services/MatchService.js"></script>

    <script type="text/javascript" src="~/Scripts/App/controllers/MatchCtrl.js"></script>
    <script type="text/javascript" src="~/Scripts/App/controllers/PlayerCtrl.js"></script>

    <script type="text/javascript" src="~/Scripts/App/directives/datePickerDirective.js"></script>
    <script type="text/javascript" src="~/Scripts/App/directives/autoFocusDirective.js"></script>
    <script type="text/javascript" src="~/Scripts/App/directives/invalidFocusDirective.js"></script>
</body>
</html>